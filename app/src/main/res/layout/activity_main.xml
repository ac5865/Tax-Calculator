<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/taxCalculator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tax Calculator"
        android:layout_margin="20sp"
        android:gravity="center_horizontal"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="182dp"
        tools:layout_editor_absoluteY="333dp" />

    <TextView
        android:id="@+id/txtView1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Enter the amount"
        android:layout_marginTop="100sp"
        android:gravity="center_horizontal"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="182dp"
        tools:layout_editor_absoluteY="333dp" />
    <EditText
        android:id="@+id/txt_amount"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_horizontal"
        android:textSize="24sp"
        android:layout_below="@+id/txtView1"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/txt_amount"
        android:gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:text="Enter the Tax Percentage"
        android:id="@+id/txtView2"
        android:textSize="24dp"/>
    <EditText
        android:id="@+id/txt_tax_percent"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_horizontal"
        android:textSize="24sp"
        android:layout_below="@+id/txtView2"/>
    <TextView
        android:id="@+id/txt_tax_amount"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="24sp"
        android:layout_below="@+id/txt_tax_percent"/>
    <TextView
        android:id="@+id/txt_total_amount"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="24sp"
        android:layout_below="@+id/txt_tax_amount"/>
    <Button
        android:id="@+id/btn_calculate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="24sp"
        android:layout_below="@id/txt_total_amount"
        android:layout_marginTop="15dp"
        android:text="Calculate"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/money"
        android:layout_below="@id/btn_calculate"
        android:layout_marginTop="20dp"/>
</RelativeLayout>